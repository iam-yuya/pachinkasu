<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
      <h2 class="mt-3">New Post</h2>
      <%= render 'posts/form', post: @post %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--検索フォーム-->
      <%= render 'search', q: @q, url: users_path %>
      <h2>Users</h2>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>