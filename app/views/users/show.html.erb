<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New Post</h2>
      <%= render 'posts/form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Posts</h2>
      <div class="text-right mr-2 pr-2">
        <%=link_to"いいね一覧へ",favorites_user_path(@user) %>
      </div>
      <%= render 'posts/index', posts: @posts %>
    </div>
  </div>
</div>