
<div class='container'>
  <%= render 'search', q: @q, url: posts_path %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New Post</h2>
      <%= render 'form', post: @post %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Posts</h2>
      <%= render 'index', posts: @posts %>
    </div>
  </div>
</div>