<div class="container">
  <h2 id="room" data-room="<%= @room.id %>" data-user= "<%= current_user.id %>">
    <%= @user.name%> さんとのチャット
  </h2>
  <div class="row">
    <div class="message mx-auto mt-4" style="width: 400px;">
      <% @chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
         <p style="text-align: right;">
            <%= chat.message %>
         </p>
        <% else %>
         <p style="text-align: left;">
            <%= chat.message %>
         </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="errors">
    <%= render "layouts/errors", obj: @chat %>
  </div>
  <div class="form mb-5">
    <%= form_with model: @chat, data: {remote: true} do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力" %>
      <%= f.hidden_field :room_id %>
    <% end %>
  </div>
</div>